{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ESNext",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"]
  }
}